<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- Amazon Logo -->
        <ImageView
        android:id="@+id/amazon_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true" android:scaleType="centerCrop"
        android:src="@drawable/img_image_amazonlogo"

        android:background="@drawable/rounded_corner_background"
        />

        <!-- UI Designer Text -->
        <TextView
            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/amazon_logo"
            android:layout_marginStart="16dp"
            android:text="UI Designer"
            android:textColor="#121212"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:lineHeight="24sp"/>

        <!-- Bookmark Icon -->
        <ImageView
            android:id="@+id/bookmark_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bookmark"
            android:scaleType="fitCenter"/>

        <!-- Job Info Text -->
        <TextView
            android:id="@+id/job_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_title"
            android:layout_toEndOf="@id/amazon_logo"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Remote, 4 days ago"
            android:textColor="#8c8896"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:lineHeight="20sp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>